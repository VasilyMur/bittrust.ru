doctype html
html
  head
    block meta
      meta(charset="UTF-8")
      title= `${title} | ${h.siteName}`
      meta(name="description" content="Продажа и ремонт оборудования для майнинга. Управление оборудованием в дата центрах. Рейтинг компаний и сервисов.")
      link(rel="canonical" href="https://bittrust.ru")
      link(rel='stylesheet', href='/dist/style.css')
      link(rel="shortcut icon" type="image/png" href="/images/icons/btc.png")
      meta(name="viewport" content="width=device-width, initial-scale=1")
      meta(name="yandex-verification" content="9cebacb6649dc5f5")
      meta(name="google-site-verification" content="3rMWiItb3IVtwL2aFI0EGILp5Oz94p22a6WcjcoQa8A")
  body
    block header
      header.top
        nav.nav
          .nav__section.nav__section--pages
            li.nav__item
              a.nav__link.nav__link--logo(href="/")
                != h.icon('bitcoin')
            each item in h.menu
              li.nav__item
                a.nav__link(href=item.slug)
                  != h.icon(item.icon)
                  span #{item.title}
          .nav__section.nav__section--search
            .search
              input.search__input(type="text" placeholder="Ввод..." name="search")
              .search__results
          .nav__section.nav__section--user
            if user
              li.nav__item: a.nav__link(href="/hearts", class=(currentPath.startsWith('/hearts') ? 'nav__link--active' : ''))
                != h.icon('like')
                span.heart-count #{user.hearts && user.hearts.length}
              li.nav__item: a.nav__link(href="/logout", class=(currentPath.startsWith('/logout') ? 'nav__link--active' : ''))
                != h.icon('logout')
                span Выход
              li.nav__item: a.nav__link(href="/account", class=(currentPath.startsWith('/account') ? 'nav__link--active' : ''))
                img.avatar(src=user.gravatar + 'd=retro')
            else
              li.nav__item: a.nav__link(href="/register", class=(currentPath.startsWith('/register') ? 'nav__link--active' : '')) Регистрация
              li.nav__item: a.nav__link(href="/login", class=(currentPath.startsWith('/login') ? 'nav__link--active' : '')) Войти

    block messages
      if locals.flashes
        .inner
          .flash-messages
            - const categories = Object.keys(locals.flashes)
            each category in categories
              each message in flashes[category]
                .flash(class=`flash--${category}`)
                  p.flash__text!= message
                  button.flash__remove(onClick="this.parentElement.remove()") &times;

    .content
      block content
        p This is the default

    footer.footer
      block footer
        p <a href="https://bittrust.ru/about" class="footer__link">О нас</a>  | © 2017 Все права защищены <a href="https://bittrust.ru" class="footer__link--logo">Bittrust.ru</a>
    
