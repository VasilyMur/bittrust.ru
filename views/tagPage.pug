extends layout

include mixins/_companyCard
include mixins/_paginationTags

block meta
  meta(charset="UTF-8")
  title= `${metaTitle} | ${h.siteName}`
  meta(name="description" content=`${metaDescription}`)
  link(rel="canonical" href=`https://bittrust.ru/tags/${tagOriginal}`)
  link(rel='stylesheet', href='/dist/style.css')
  link(rel="shortcut icon" type="image/png" href="/images/icons/btc.png")
  meta(name="viewport" content="width=device-width, initial-scale=1")

block content
  .inner
    .front-header
      h1 #{tag} в Москве
      if description
        p #{description}
    ul.tags
      each t in tagsEng
        li.tag
          a.tag__link(href=`/tags/${(t.slg)}` class=(t._id === tag ? "tag__link--active" : ''))
            span.tag__text= t._id
            span.tag__count= t.count

    .companies
      each company in companies
        +companyCard(company, tag)
    +paginationTags(page, pages, tagOriginal)
